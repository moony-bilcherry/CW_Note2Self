<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Ellipse}" x:Key="ClosingEll">
        <Setter Property="Fill" Value="#011627"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="ToolTip" Value="Закрыть"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="#e71d36"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="{x:Type Ellipse}" x:Key="MinimizingEll">
        <Setter Property="Fill" Value="#fdfffc"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="ToolTip" Value="Свернуть"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="#2ec4b6"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>